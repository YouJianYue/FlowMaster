# ========================
# FlowMaster 生产环境配置模板
# ========================

# ========================
# 环境配置
# ========================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=change-this-to-very-strong-secret-key

# ========================
# 数据库配置 - PostgreSQL (推荐)
# ========================
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/flowmaster
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# ========================
# Redis配置
# ========================
REDIS_URL=redis://127.0.0.1:6379/0
REDIS_PASSWORD=your-strong-redis-password

# ========================
# JWT认证配置
# ========================
JWT_SECRET_KEY=super-strong-jwt-secret-key-for-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# ========================
# RSA加密配置
# ========================
FLOWMASTER_SECURITY_CRYPTO_PRIVATE_KEY=your-production-rsa-private-key
FLOWMASTER_SECURITY_CRYPTO_PUBLIC_KEY=your-production-rsa-public-key

# ========================
# 验证码配置
# ========================
CAPTCHA_MAIL_LENGTH=6
CAPTCHA_MAIL_EXPIRATION_IN_MINUTES=5
CAPTCHA_SMS_LENGTH=6
CAPTCHA_SMS_EXPIRATION_IN_MINUTES=5

# ========================
# 日志配置
# ========================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=52428800  # 50MB
LOG_BACKUP_COUNT=10

# ========================
# 应用服务配置
# ========================
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=false